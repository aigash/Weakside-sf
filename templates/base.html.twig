<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Weakside{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        <!-- OUI -->
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            <link rel="stylesheet" type="text/css" href="css/style.css">
            <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
            <link rel="shortcut icon" type="image/x-icon" href="img/logo/weaksidefav.ico" />
        {% endblock %}

    </head>
    <body>
        {% block navbar %}
            <nav class='col'>
                <div class='d-flex'>
                    <button id='btnMenu' class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menuWeakside"
                        aria-controls="#menuWeakside" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" class="bi" fill="currentColor"
                                viewBox="0 0 16 16">
                                <path fill-rule="evenodd"
                                    d="M2.5 11.5A.5.5 0 0 1 3 11h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 3h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z">
                                </path>
                            </svg>
                        </span>
                    </button>
                    <div class='logoWeakside'>
                        <a href="{{ path('home') }}" id='plogoWeakside'>Weakside</a>
                    </div>
                </div>
            </nav>

            <div id="blurMenu">
            </div>

            <div id='menuWeakside'>
                <ul>
                    <li><a class="{% if app.request.attributes.get('_route') == 'home' %}active{% endif %}" href="{{ path('home') }}">Accueil</a></li>
                    <li><a class="{% if app.request.attributes.get('_route') == 'selection' or 'adversaires' in app.request.attributes.get('_route') or 'matchup' in app.request.attributes.get('_route') %}active{% endif %}" href="{{ path('selection') }}">Matchups</a></li>
                    <li><a class="{% if app.request.attributes.get('_route') == 'reverse' %}active{% endif %}" href="{{ path('reverse') }}">Reverse</a></li>
                    <li><a class="{% if app.request.attributes.get('_route') == 'guide' %}active{% endif %}" href="{{ path('guide') }}">Guides</a></li>
                    <li><a class="{% if app.request.attributes.get('_route') == 'about' %}active{% endif %}" href="{{ path('about') }}">About</a></li>
                </ul>
                <div id='hideMenu'>
                    <img src='img/back.svg'>
                </div>
                <div id='footerWeakside'>
                    <a href="{{ path('mentions') }}">Mentions l√©gales</a>
                    <div>Copyright &copy; 2021 All Rights Reserved by <a href="">Laperoh</a> and <a href="">AiGash</a>.</div>
                </div>
            </div>
        {% endblock %}

        {% set imgTiles = 'http://ddragon.leagueoflegends.com/cdn/img/champion/tiles/' %}
        {% set imgLoading = 'http://ddragon.leagueoflegends.com/cdn/img/champion/loading/' %}
        {% set imgChamp = 'http://ddragon.leagueoflegends.com/cdn/11.21.1/img/champion/' %}
        {% set imgSplash = 'http://ddragon.leagueoflegends.com/cdn/img/champion/splash/' %}

        {% set imgPassive = 'http://ddragon.leagueoflegends.com/cdn/11.21.1/img/passive/' %}
        {% set imgSpell = 'https://ddragon.leagueoflegends.com/cdn/11.21.1/img/spell/' %}

        {% block body %}{% endblock %}

        {% block footer %}{% endblock %}

        {% block javascripts %}
            <script src="js/script.js"></script>
        {% endblock %}
    </body>
</html>
